<Window x:Class="WpfProgressBarDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="ProgressBar DEMO" 
        
        Width="500" Height="175"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel>
        <ProgressBar x:Name="Progress"
                     Height="25"
                     Margin="10"
                     Background="Fuchsia"
                     Minimum="0"
                     Maximum="100"/>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="Start"
                    Margin="10"
                    Padding="10"
                    Foreground="White"
                    Background="Green"
                    FontSize="16"
                    Click="ButtonStart_OnClick"/>
            <Button Content="Stop"
                    Margin="10"
                    Padding="10"
                    Foreground="White"
                    Background="Red"
                    FontSize="16"
                    Click="ButtonStop_OnClick"/>
        </StackPanel>
    </StackPanel>
</Window>
